!!!
%html
  %body
    %title SA Timesheet
    %link{crossorigin: "anonymous", href: "https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity: "sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", rel: "stylesheet"}/
    = stylesheet_link_tag 'application', 'media' => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %nav.navbar.navbar-expand-lg.bg-success.text-white.mb-3
      = image_tag "SAlogo.png"
      .banner_text
        - unless @action == 'login'
          - if (@admin_user || @manager_user)
            = button_to " View Users", timetables_admin_path, class: "btn btn-light bg-dark text-light white"
          = button_to " Log Out", logout_path, class: "btn btn-light bg-dark text-light white"
    .container
      .flash
        = render 'layouts/flash'
      %main#main
        = yield
      
        